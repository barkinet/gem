# encoding: utf-8

Gem::Specification.new do |s|
  s.name              = "{{name}}"
  s.version           = "{{version}}"
  s.summary           = "{{summary}}"
  s.description       = "{{description}}"
  s.authors           = {{authors.inspect}}
  s.email             = {{email.inspect}}
  s.homepage          = "{{homepage}}"
  s.files             = []
  s.license           = "{{license}}"
% if defined?(Plan::Bin)
  s.executables.push("{{name}}")
% end
end
